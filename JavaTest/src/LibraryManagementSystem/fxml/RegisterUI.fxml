<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="LibraryManagementSystem.controller.RegisterUIController">
    <children>
        <GridPane alignment="center" hgap="10" prefHeight="400.0" prefWidth="600.0" vgap="10">
            <padding>
                <Insets bottom="10.0" left="25.0" right="10.0" top="25.0" />
            </padding>
            <columnConstraints>
                <ColumnConstraints />
                <ColumnConstraints maxWidth="146.0" minWidth="93.0" prefWidth="111.0" />
                <ColumnConstraints maxWidth="135.0" minWidth="10.0" prefWidth="105.0" />
                <ColumnConstraints maxWidth="95.0" minWidth="10.0" prefWidth="73.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints />
                <RowConstraints minHeight="10.0" prefHeight="30.0" />
                <RowConstraints />
                <RowConstraints />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
                <RowConstraints />
                <RowConstraints />
                <RowConstraints />
            </rowConstraints>
            <children>

                <Text opacity="0.93" text="注册新用户" textAlignment="CENTER" GridPane.columnIndex="0" GridPane.columnSpan="4" GridPane.rowIndex="0">
                    <font>
                        <Font name="Microsoft YaHei" size="39.0" />
                    </font>
                </Text>

                <Label text="身份证号" GridPane.columnIndex="0" GridPane.rowIndex="2" />

                <TextField fx:id="idField" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2" />

                <Label text="密码" GridPane.columnIndex="0" GridPane.rowIndex="3" />

                <PasswordField fx:id="passwordField" onKeyPressed="#enterKey" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3" />

                <HBox spacing="10" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="9">
                    <children>
                        <Button fx:id="registerButton" onAction="#register" prefHeight="30.0" prefWidth="234.0" text="注册" />
                    </children>
                </HBox>
            <Label text="姓名" GridPane.rowIndex="1" />
            <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1" />
            <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="4" />
            <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="5" />
            <Label text="邮箱*" GridPane.rowIndex="4" />
            <Label text="手机*" GridPane.rowIndex="5" />
            <Label text="注：*为选填" GridPane.columnSpan="4" GridPane.rowIndex="7" />
            <Label text="类型" GridPane.rowIndex="6" />
            <ChoiceBox fx:id="typeField" prefHeight="30.0" prefWidth="225.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="6" />
            </children>

        </GridPane>
    </children>
</AnchorPane>
